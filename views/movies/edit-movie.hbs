<h2>Edit Movie</h2>

 <form action="/movies/{{movie._id}}/edit" method="POST">
   <label>Title
     <input type="text" name="title" value="{{movie.title}}" />
   </label>
   <label>Genre
     <input type="text" name="genre" value="{{movie.genre}}" />
   </label>
   <label>Plot
     <textarea type="text" name="plot" value="{{movie.plot}}"></textarea>
   </label>

   <label>
     Cast
     <select name="cast">
       <option selected value="{{movie.cast}}"></option>
       {{#each celebritiesFromDb}}
         <option value="{{this._id}}"> {{this.name}} </option>
       {{/each}}
     </select>
   </label>

   <button type="submit">Edit</button>
 </form> 